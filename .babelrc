{
    "presets": [
        "react",
        "es2015",
        "stage-1"
    ],
    "plugins": [
        [
            "track-usage",
            {
                "sourceRoot": "src/main/js/",
                "trackedFunctions": {
                    "injection": {
                        "module": "automaton-js",
                        "fn": "injection"
                    },
                    "i18n": {
                        "module": "automaton-js",
                        "fn": "i18n"
                    }
                },
                "debug": false
            }
        ],
        "transform-decorators-legacy",
        "transform-class-properties",
        "transform-object-rest-spread",
        "syntax-dynamic-import"
    ],
    "env": {
        "test": {
            "plugins": [
                "babel-plugin-espower"
            ]
        },
        "production": {
            "plugins": [
                [
                    "transform-imports", {
                        "reactstrap": {
                            "transform": "reactstrap/lib/${member}",
                            "preventFullImport": true
                        }
                    }
                ]
            ]
        },
        "analyze": {
            "plugins": [
                [
                    "automaton",
                    {
                        "sourceRoot": "src/main/js/",
                        "debug": false
                    }
                ]
            ]
        }
    }
}

